<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <include layout="@layout/nav_layout" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="68dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/shape_curre_bg"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fukuanfang"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zichan_detail_fukuanafng"
                    android:paddingLeft="20dp"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:gravity="left"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <TextView
                        android:id="@+id/txt_fuKuan_addres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        tools:text="yUyU3QzEwvCb2eW6aGwQ7mph"
                        android:textColor="#06243b"
                        />
                    <ImageView
                        android:id="@+id/img_fuKuan_addres"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="10dp"
                        android:src="@mipmap/ic_copy"
                        android:layout_gravity="center"
                        ></ImageView>


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_shoukuanfang"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zichan_detail_shoukuanfang"
                    android:paddingLeft="20dp"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:gravity="left"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <TextView
                        android:id="@+id/txt_shouKuan_addres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        tools:text="UyU3QzEwvCb2eW6aGwQ7mph28Kfa1qn7R"
                        android:textColor="#06243b"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:id="@+id/imag_shouKuan_addres"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="10dp"
                        android:src="@mipmap/ic_copy"
                        android:layout_gravity="center"
                        ></ImageView>

                </LinearLayout>

                <View style="@style/LineStyle"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="68dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/shape_curre_bg"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <TextView
                        android:id="@+id/tv_amount_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="@string/zichan_detail_jine"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/txt_jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="102.020236540236543654 M"
                        android:textColor="#06243b"
                        android:gravity="right"
                        />

                </LinearLayout>

                <View style="@style/LineStyle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
