                </LinearLayout>

                <View style="@style/LineStyle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#ffffff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="@string/zichan_detail_block"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/txt_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#06243b"
                        android:gravity="right"
                        />
                    <ProgressBar
                        android:id="@+id/txt_statue_b"
                        android:layout_width="19dp"
                        android:layout_height="19dp">
                    </ProgressBar>

                </LinearLayout>
                <View style="@style/LineStyle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="55dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="@string/zichan_detail_tiime"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#06243b"
                        android:gravity="right"
                        />
                    <ProgressBar
                        android:id="@+id/txt_statue_t"
                        android:layout_width="19dp"
                        android:layout_height="19dp">
                    </ProgressBar>
                </LinearLayout>
            </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="68dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:background="@drawable/shape_curre_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zichan_detail_beizhu"
                android:textColor="#999999"
                android:textSize="14sp"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/txt_beizhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="#06243b"
                android:gravity="left"
                />

        </LinearLayout>


